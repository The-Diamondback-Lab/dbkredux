{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "patternProperties": {
    "^(/[a-zA-Z0-9\\.\\-\\+_]+)+/?$": {
      "type": "object",
      "description": "REST route",
      "properties": {
        "type": {
          "type": "string",
          "description": "The type of data associated with this route",
          "oneOf": [
            { "const": "file" },
            { "const": "uri" }
          ]
        },
        "path": {
          "type": "string"
        }
      },
      "allOf": [
        {
          "if": {
            "properties": { "type": { "const": "file" } }
          },
          "then": {
            "properties": {
              "path": {
                "description": "Path to a local file in the server's \"/static\" directory"
              }
            }
          }
        },
        {
          "if": {
            "properties": { "type": { "const": "uri" } }
          },
          "then": {
            "properties": {
              "path": {
                "description": "URI path to a remote resource. File URIs are NOT supported",
                "format": "uri",
                "pattern": "^https?:\/\/"
              }
            }
          }
        }
      ],
      "required": [
        "type"
      ]
    }
  }
}
